@model IEnumerable<ChetuApplication12.Models.ViewModel.EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}
@*<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />*@
<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
<h1>Employee Record</h1>

<a asp-action="Create" asp-controller="NewEmployee" class=" btn btn-outline-info">Add Employee</a>
<p class="text-center text-info">@TempData["error"]</p>
<table id="myTable" class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Salary</th>
        <th>Gender</th>
        <th>Department</th>
        <th>Action</th>


    </tr>
    @foreach (var emp in Model)
    {
<tr>
    <td>@emp.Id</td>
    <td>@emp.Name</td>
    <td>@emp.Email</td>
    <td>@emp.Salary</td>
    <td>@emp.Gender</td>
    <td>@emp.Department</td>
    <td>
        <a asp-action="Update" asp-controller="NewEmployee" asp-route-id="@emp.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-controller="NewEmployee" asp-route-id="@emp.Id" class="btn btn-warning" onclick="return confirm('Are you sure you want to delete the record')">Delete</a>


    </td>

</tr>
    }
</table>

@section Scripts{ 
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/js/myTable.js"></script>
}

