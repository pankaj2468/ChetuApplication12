@model ChetuApplication12.Models.ViewModel.EmployeeCreateViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <div class=" card-title"><h4>Edit Employee</h4></div>
            </div>
            <div class="card-body">
                <form asp-action="Update" asp-controller="NewEmployee" method="post">
                    <div class="form-group">
                        <label>Employee Name</label>
                        <input type="hidden" asp-for="Id" />
                        <input type="text" class="form-control"
                               asp-for="Name" />
                    </div>
                    <div class="form-group">
                        <label>Employee Email</label>
                        <input type="text" class="form-control"
                               asp-for="Email" />
                    </div>
                    <div class="form-group">
                        <label>Employee Salary</label>
                        <input type="text" class="form-control"
                               asp-for="Salary" />
                    </div>
                    <div class="form-group">
                        <label>Employee Gender</label>
                        <select asp-for="Gender" class="form-control">
                            <option value="">Select</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>

                        </select>
                    </div>

                    <div class="form-group">
                        <label>Employee Department</label>
                        <div class="row">
                            <div class="col-10">
                                <select asp-for="Department" class="form-control">
                                    <option value="">Select</option>
                                    @foreach (var d in ViewBag.depts)
                                    {
                                        <option value="@d.Id">@d.Name</option>
                                    }

                                </select>
                            </div>
                            <div class="col-2">
                                <a asp-action="CreateDepartment" asp-controller="NewEmployee" class="btn btn-info">Create</a>
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-outline-success" value="Update" />

                    </div>

                </form>
            </div>
        </div>
    </div>

</div>



